<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".queslist.Ques3Activity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@drawable/head"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.35"
        tools:ignore="MissingConstraints"
        android:orientation="vertical">

        <TextView
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="@string/question_3"
            android:textSize="16sp"
            android:textColor="@color/black"
            />

        <RadioGroup
            android:id="@+id/ques3_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/ques3_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Definitely yes"
                android:textSize="14sp" />
            <RadioButton
                android:id="@+id/ques3_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:textSize="14sp" />
            <RadioButton
                android:id="@+id/ques3_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I donâ€™t know"
                android:textSize="14sp" />
            <RadioButton
                android:id="@+id/ques3_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"
                android:textSize="14sp" />
            <RadioButton
                android:id="@+id/ques3_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Definitely no lack of motivation for studies"
                android:textSize="14sp" />
        </RadioGroup>

        <Button
            android:id="@+id/ques_next3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Next"
            android:backgroundTint="@color/yellow"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>